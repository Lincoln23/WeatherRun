<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lincoln.weatheapp.MainActivity">

    <TextView
        android:id="@+id/cityText"
        android:layout_centerHorizontal="true"
        android:text="City,Country"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/tempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityText"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text="Temperature"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/windText"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:layout_below="@id/tempText"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/cloudText"
        android:text="Cloud"
        android:textColor="#000000"
        android:layout_below="@id/windText"
        android:layout_alignLeft="@id/windText"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/pressureText"
        android:text="Pressure"
        android:layout_below="@id/cloudText"
        android:layout_alignLeft="@id/cloudText"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/humidText"
        android:text="Humidity"
        android:textColor="#000000"
        android:layout_below="@id/pressureText"
        android:layout_alignLeft="@id/pressureText"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/riseText"
        android:text="Sunrise"
        android:textColor="#000000"
        android:layout_below="@id/humidText"
        android:layout_alignLeft="@id/humidText"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/setText"
        android:text="Sunset"
        android:layout_below="@id/riseText"
        android:layout_alignLeft="@id/riseText"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/updateText"
        android:text="Last Updated"
        android:layout_alignLeft="@id/cloudText"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/cityChange"
        android:text="Change City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setText"
        android:layout_alignStart="@+id/setText"
        android:layout_below="@+id/setText"
        android:layout_marginTop="31dp" />

    <ImageView
        android:id="@+id/runImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/updateText"
        android:layout_below="@id/cityChange"
        />
</RelativeLayout>
